{
  "name": "personal-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "cross-env NODE_ENV=production next build",
    "start": "next start && node app/ascii-art.js",
    "lint": "next lint",
    "clean": "rimraf .next out",
    "clean:force": "rimraf .next out && git clean -fd || echo Cleanup completed with warnings",
    "predeploy": "npm run clean && npm run build && echo. > out/.nojekyll",
    "deploy": "gh-pages -d out --dotfiles --dest .",
    "deploy:safe": "npm run clean:force && npm run predeploy && npm run deploy",
    "deploy:manual": "git subtree push --prefix=out origin gh-pages"
  },
  "homepage": "https://lucyach.github.io/personal-website",
  "dependencies": {
    "next": "^16.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "gh-pages": "^6.3.0",
    "rimraf": "^6.1.3"
  }
}
